@using Microsoft.AspNet.Identity
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand">
                <a id="HeaderMainLogoLink" href="@Url.Action("Index", "Col")">
                    <div class="col-logo"></div>
                </a>
            </div>
            
        </div>
        <div class="navbar-collapse collapse">
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a id="HeaderDropDown" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    @User.Identity.Name<span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink(Resources.Header.Link_ColHomePage, "Index", "Col", null, new { id = "HomePageHeaderLink" })</li>
                                    <li>@Html.ActionLink(Resources.Header.Link_EditProfile, "UserDetails", "Account",null, new { id = "UserDetailsHeaderLink" })</li>
                                    <li>@Html.ActionLink(Resources.Header.Link_ChangePassword, "ChangePassword", "Account", null, new { id = "ChangePasswordHeaderLink" })</li>
                                    <li role="separator" class="divider"></li>
                                    <li><a id="LogOffLink" href="javascript:document.getElementById('logoutForm').submit()">@Resources.Header.Link_SignOut</a></li>
                                </ul>
                            </li>
                        </ul>
                }
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink(@Resources.Header.Link_SignIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    <li>@Html.ActionLink("SAMLLogin", "Secured", "Account")</li>
                    <li>@Html.ActionLink("METADATA", "Metadata", "Account")</li>                      
                </ul>
            }
        </div>
    </div>
</div>





